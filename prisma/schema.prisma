generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  bengaliName String?
  description String?
  price       Float
  unit        String   @default("kg") // kg, pc, plate
  category    String
  imageUrl    String?
  videoUrl    String?
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]
}

model Order {
  id            String      @id @default(cuid())

  customerName  String
  phone         String
  address       String
  pincode       String
  type          String      // RETAIL, BULK
  status        String      // RECEIVED, CLEANING, CUTTING, OUT_FOR_DELIVERY, DELIVERED, CANCELLED
  totalAmount   Float
  paymentStatus String      @default("PENDING") // PENDING, PAID
  occasion      String?     // For bulk orders
  deliveryDate  DateTime?   // For bulk orders
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  items         OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  productName String // Snapshot in case product is deleted
  quantity  Float
  price     Float   // Price at time of order
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String // Hashed
}
